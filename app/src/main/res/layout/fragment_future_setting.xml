<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ius.smartlab.Fragments.FutureSettingFragment">

    <TextView
        android:id="@+id/future_status_title"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/future_status_title"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/fs_linear1"
        android:layout_below="@+id/future_status_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/button_selector1"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:text="Temperature"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/future_temperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/edittext_rounded"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:padding="5dp"
            android:layout_weight=".65"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/fs_linear2"
        android:layout_below="@+id/fs_linear1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/button_selector1"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:text="@string/cs_item3"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/future_light"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/colorPrimaryDark"
            android:background="@drawable/edittext_rounded"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:padding="5dp"
            android:layout_weight=".65"
            android:inputType="numberDecimal"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/fs_linear3"
        android:layout_below="@+id/fs_linear2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/button_selector1"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:text="Door"
            android:textColor="@color/colorPrimaryDark" />

        <EditText
            android:id="@+id/future_doors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext_rounded"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textColor="@color/colorPrimaryDark"
            android:padding="5dp"
            android:layout_weight=".65"
            android:inputType="numberDecimal"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/fs_linear4"
        android:layout_below="@+id/fs_linear3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/button_selector1"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:text="Date"
            android:textColor="@color/colorPrimaryDark" />

        <!-- Date -->
        <EditText
            android:id="@+id/future_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext_rounded"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textColor="@color/colorPrimaryDark"
            android:focusable="false"
            android:padding="5dp"
            android:layout_weight=".65" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/fs_linear5"
        android:layout_below="@+id/fs_linear4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:background="@drawable/button_selector1"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".35"
            android:text="Time"
            android:textColor="@color/colorPrimaryDark" />

        <!-- Time -->
        <EditText
            android:id="@+id/future_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittext_rounded"
            android:textCursorDrawable="@drawable/edittext_cursor"
            android:textColor="@color/colorPrimaryDark"
            android:focusable="false"
            android:padding="5dp"
            android:layout_weight=".65" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_future_done"
        android:layout_below="@+id/fs_linear5"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Done"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_selector3"/>

</RelativeLayout>

