<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ius.smartlab.Fragments.CurrentStatusFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/current_status_title"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/current_status_title"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cs_linear1"
        android:layout_below="@+id/current_status_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_selector1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/people"/>

        <TextView
            android:id="@+id/curr_num_of_people"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_weight=".25"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cs_linear2"
        android:layout_below="@+id/cs_linear1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_selector1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/thermometer"/>

        <TextView
            android:id="@+id/current_temperature"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="5dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight=".5"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cs_linear3"
        android:layout_below="@+id/cs_linear2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1"
        android:layout_marginBottom="8dp"
        android:background="@drawable/button_selector1">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:src="@drawable/bulb_icon"/>

        <TextView
            android:id="@+id/current_light_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_weight=".5"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cs_linear10"
        android:layout_below="@+id/cs_linear3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:padding="10dp"
        android:weightSum="1"
        android:background="@drawable/button_selector1"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:src="@drawable/doors"/>

        <TextView
            android:id="@+id/doors_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_weight=".7"
            android:text=""/>
    </LinearLayout>

    <Button
        android:id="@+id/mancontroller"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/cs_linear10"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Manual Controller"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/button_selector3"/>

    </RelativeLayout>

</RelativeLayout>